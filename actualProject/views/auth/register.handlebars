<section id="mainContent-P1">
    <div class="mainHeader">
        <div class="row">
            <div class="col-8 ml-5 mb-5 mt-4">
                <div class="col-6">
                    <h1 class="display-4">Sign Up</h1>
                    <div class="login-container">
                        <form class="form-horizontal" method="post" action="/api/users/register">
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="name">Name:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" placeholder="Enter name"
                                        name="name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">Email:</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="email" placeholder="Enter email"
                                        name="email">
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <label class="control-label col-4" for="password">Password:</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="password"
                                        placeholder="Enter password" name="password">
                                </div>
                                <div class="form-group mt-3">
                                    <label class="control-label col-12" for="password2">Confirm
                                        Password:</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="password2"
                                            placeholder="Enter password again" name="password2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-light" name="signup">Sign
                                            Up</button>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>